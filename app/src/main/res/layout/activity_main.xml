<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f0e6"
    android:fitsSystemWindows="false"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#006A1500"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:text="@string/application_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#6A1500"
            android:textSize="37sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="60dp"
        android:background="#6A1500"
        android:fitsSystemWindows="false"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_description"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:text="@string/application_description"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="21sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_node_red"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background_color"
            android:drawableTop="@drawable/button_nodered_icon"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="35dp"
            android:text="@string/btn_nodered"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dashboard"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background_color"
            android:drawableTop="@drawable/button_nodered_dashboard_icon"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="35dp"
            android:text="@string/btn_dashboard"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_console"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background_color"
            android:drawableTop="@drawable/button_termux_icon"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="35dp"
            android:text="@string/btn_console"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            app:cornerRadius="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_info"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/button_background_color"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/button_info_icon"
            android:drawablePadding="5dp"
            android:drawableTint="#ffffff"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="35dp"
            android:text="@string/btn_info"
            android:textColor="@color/button_text_color"
            android:textSize="14sp"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>
